class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        // Code here
    
       int sumfirst=0;
        int sumend=INT_MIN;
        for(int i=0;i<arr.size();i++)
        {
            sumfirst=sumfirst+arr[i];
             if(sumend<sumfirst)
                sumend=sumfirst;
             if(sumfirst<0)
                sumfirst=0;
        }
        return sumend;
    }
};
//2.to find start and end index of the max sum subarray
class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        // Code here
    int sum=0,max=INT_MIN;
      int start,anstart,myend;
    for(int i=0;i<arr.size();i++)
    {
        sum=sum+arr[i];
        if(sum==0)
            start=i;
      if(sum>max)
      {
          max=sum;
          anstart=start;
          myend=i;
      }
      if(sum<0)
      {
          sum=0;
      }
    }
    return max; 
    }
};
